@using ShopWatch.WebMvc.ViewModels
@model ChangePasswordViewModel
@{ ViewBag.Title = "Change Password"; }

<h4 class="text-center">Đổi mật khẩu</h4>
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	<h7 class="text-danger">@ViewBag.Message</h7>
	@Html.AntiForgeryToken()
	<hr />
	@Html.ValidationSummary("", new { @class = "text-danger" })
	<div class="form-group">
		@Html.LabelFor(m => m.OldPassword, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @id = "old" })
			<input type="checkbox" onclick="myFunction('old')">&ensp;Show

		</div>
	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @id = "new" })
			<input type="checkbox" onclick="myFunction('new')">&ensp;Show
		</div>

	</div>
	<div class="form-group">
		@Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
		<div class="col-md-10">
			@Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @id = "renew" })
			<input type="checkbox" onclick="myFunction('renew')">&ensp;Show
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" value="Change password" class="btn btn-danger" />
		</div>
	</div>}

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
	<script>
		function myFunction(a) {
			var x = document.getElementById(a);
			if (x.type === "password") {
				x.type = "text";
			} else {
				x.type = "password";
			}
		}
	</script>
}

